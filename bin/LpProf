import perf_samples_analyzer as psa
import argparse

parser = argparse.ArgumentParser(description='LPprofiler profiling tool.',\
                                 formatter_class=argparse.RawTextHelpFormatter)

parser.add_argument("command",help="launch command to be profiled")
args = parser.parse_args()


print(args.command)

lpp=psa.LpProfiler(args.command)
lpp.run()



